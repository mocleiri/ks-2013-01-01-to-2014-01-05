    <bean id="Conversation-FormView" parent="Conversation-FormView-parent" />
	<bean abstract="true" id="Conversation-FormView-parent" parent="MyPlanFormView">
		<property name="id" value="Conversation-FormView" />
		<property name="entryPageId" value="conversation_main" />
		<property name="cssClasses">
			<list merge="true">
				<value>myplan-view</value>
			</list>
		</property>
		<property name="items">
			<list>
				<ref bean="conversation_main_page" />
			</list>
		</property>
		<property name="persistFormToSession" value="true"/>
		<property name="header.render" value="false" />
		<property name="footer.render" value="false" />
	</bean>

	<bean id="conversation_main_page" parent="conversation_main_page-parent" />
	<bean abstract="true" id="conversation_main_page-parent" parent="Uif-Page" p:id="conversation_main">
		<property name="layoutManager">
			<bean parent="Uif-HorizontalBoxLayout" />
		</property>
		<property name="items">
			<list>
				<ref bean="conversation_controls" />
				
			</list>
		</property>
	</bean>
	
	<bean id="conversation_controls" parent="conversation_controls-parent" />
	<bean abstract="true" id="conversation_controls-parent" parent="Uif-VerticalBoxGroup" p:id="conversation_controls">
		<property name="forceSessionPersistence" value="true"/>
		<property name="items">
			<list>
				<bean parent="Uif-HeaderOne" p:headerText="[strong]Conversations[/strong]" />
				<bean parent="Uif-PrimaryActionButton-Small" p:actionLabel="New"
					p:actionScript="showLightboxUrl('review/conversation?methodToCall=create')" />
				<ref bean="conversation_list" />
			</list>
		</property>
	</bean>
	
	<bean id="conversation_list" parent="conversation_list-parent"/>
	<bean id="conversation_list-parent" abstract="true" parent="Uif-ListCollectionSection">
        <property name="collectionObjectClass"
                  value="org.kuali.student.ap.plan.review.dto.ConversationInfo"/>
        <property name="renderAddLine" value="false"/>
        <property name="renderLineActions" value="false"/>
        <property name="disclosure.render" value="false"/>
        <property name="propertyName" value="conversations"/>
        <property name="layoutManager.lineGroupPrototype.header.render" value="false"/>
        
        <property name="items">
            <list>
                <bean parent="Uif-HorizontalFieldGroup" p:id="@{#line.learningPlanId}">
                    <property name="fieldLabel.render" value="false"/>
                    <property name="group.validationMessages.render" value="false"/>
                    <property name="items">
                        <list>
                            <bean id="conversation_lp_id" parent="Uif-MessageField" p:messageText="@{#line.learningPlanId}"/>
                            <bean id="conversation_advisor_id" parent="Uif-MessageField" p:messageText="@{#line.advisorId}"/>
                            <bean id="conversation_topic" parent="Uif-MessageField" p:messageText="@{#line.topic}"/>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>
 
</beans>