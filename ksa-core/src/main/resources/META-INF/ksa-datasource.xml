<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd"
       default-lazy-init="true">

    <!-- Atomikos UserTransaction implementation -->
    <bean id="atomikosUserTransaction" class="com.atomikos.icatch.jta.UserTransactionImp"/>

    <!-- Atomikos JTA TransactionManager implementation -->
    <bean id="atomikosTransactionManager" class="com.atomikos.icatch.jta.UserTransactionManager"
          init-method="init" destroy-method="close">
        <property name="forceShutdown" value="false"/>
    </bean>

    <!--  Spring JTA TransactionManager -->
    <bean id="transactionManager" class="com.sigmasys.kuali.ksa.service.jta.JtaTransactionManager">
        <property name="userTransaction" ref="atomikosUserTransaction"/>
        <property name="transactionManager" ref="atomikosTransactionManager"/>
    </bean>

    <bean id="abstractDataSource" class="org.springframework.jndi.JndiObjectFactoryBean" abstract="true">
        <property name="lookupOnStartup" value="false"/>
        <property name="expectedType" value="com.atomikos.jdbc.AtomikosDataSourceBean"/>
        <property name="proxyInterface" value="javax.sql.DataSource"/>
    </bean>

    <!-- KSA DataSource definition -->
    <bean id="ksaDataSource" class="org.springframework.jndi.JndiObjectFactoryBean" parent="abstractDataSource">
        <property name="jndiName" value="java:comp/env/ksa"/>
    </bean>

    <!-- Rice DataSource definition -->
    <bean id="riceDataSource" class="org.springframework.jndi.JndiObjectFactoryBean" parent="abstractDataSource">
        <property name="jndiName" value="java:comp/env/rice"/>
    </bean>

    <!-- Rice DataSource definition -->
    <bean id="ksDataSource" class="org.springframework.jndi.JndiObjectFactoryBean" parent="abstractDataSource">
        <property name="jndiName" value="java:comp/env/ks"/>
    </bean>

</beans>
