<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <name>KS Standalone Admin App</name>
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.kuali.rice</groupId>
        <artifactId>rice</artifactId>
        <version>2.2.0</version>
    </parent>
    <artifactId>ks-standalone-admin-app</artifactId>
    <packaging>war</packaging>

    <properties>
        <web.launch.context.path>/sample-app</web.launch.context.path>
        <bootstrap.spring.file>classpath:SampleAppBeans.xml</bootstrap.spring.file>
        <maven.surefire.skip>false</maven.surefire.skip>
        <war.overlay.pattern.1>WEB-INF/web.xml</war.overlay.pattern.1>
        <war.overlay.exclude.2>DO_NOT_MATCH_ANYTHING_PATTERN</war.overlay.exclude.2>
        <kuali.testjar.phase>none</kuali.testjar.phase>
        <kuali.generate.reports>false</kuali.generate.reports>
    </properties>

    <build>
        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>true</filtering>
                <includes>
                    <include>**/META-INF/*.xml</include>
                </includes>
            </resource>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>false</filtering>
                <excludes>
                    <exclude>**/META-INF/*.xml</exclude>
                </excludes>
            </resource>
        </resources>
    
        <plugins> 
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>
                    <execution>
                        <id>src-dependencies</id>
                        <phase>none</phase>
                        <goals>
                            <!-- use copy-dependencies instead if you don't want to explode the sources -->
                            <goal>unpack-dependencies</goal>
                        </goals>
                        <configuration>
                            <classifier>sources</classifier>
                            <includeGroupIds>org.kuali</includeGroupIds>
                            <failOnMissingClassifierArtifact>false</failOnMissingClassifierArtifact>
                            <outputDirectory>${project.build.directory}/dependency-sources</outputDirectory>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.kuali.maven.plugins</groupId>
                <artifactId>maven-kscontractdoc-plugin</artifactId>
                <version>1.0.4-SNAPSHOT</version>
                <!-- For instructions see https://wiki.kuali.org/display/STUDENT/Using+the+Contract+Doc+Maven+Plugin  -->
                <executions>
                    <!-- This generates the remote service impl -->
                    <execution>
                        <id>generate-remote-impl</id>
                        <phase>none</phase>
                        <goals>
                            <goal>kscreateremoteimpl</goal> 
                        </goals>
                        <configuration>
                            <sourceDirs>
                                <sourceDir>${project.build.directory}/dependency-sources</sourceDir>
                            </sourceDirs>
                        </configuration>
                    </execution> 
                    <!-- This generates the admin ui -->
                    <execution>
                        <id>generate-admin-ui</id>
                        <phase>none</phase>
                        <goals>
                            <goal>kscreateadminui</goal> 
                        </goals>
                        <configuration>
                            <sourceDirs>
                                <sourceDir>${project.build.directory}/dependency-sources</sourceDir>
                            </sourceDirs>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.mortbay.jetty</groupId>
                <artifactId>jetty-maven-plugin</artifactId>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>tomcat-maven-plugin</artifactId>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-war-plugin</artifactId>
                <configuration>
                    <overlays>
                        <overlay>
                            <groupId>${project.groupId}</groupId>
                            <artifactId>rice-web</artifactId>
                            <includes>
                                <include>${war.overlay.pattern.1}</include>
                            </includes>
                            <filtered>true</filtered>
                        </overlay>
                        <overlay>
                            <groupId>${project.groupId}</groupId>
                            <artifactId>rice-web</artifactId>
                            <excludes>
                                <exclude>${war.overlay.pattern.1}</exclude>
                                <exclude>${war.overlay.exclude.2}</exclude>
                            </excludes>
                            <filtered>false</filtered>
                        </overlay>
                    </overlays>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <profiles>
        <profile>
            <id>kuali-release</id>
            <properties>
                <war.overlay.exclude.2>**/ojdbc*.jar</war.overlay.exclude.2>
            </properties>
        </profile>
        <profile>
            <id>standalone</id>
            <properties>
                <web.launch.context.path>/sample-app-standalone</web.launch.context.path>
                <bootstrap.spring.file>classpath:SampleAppStandaloneBeans.xml</bootstrap.spring.file>
            </properties>
        </profile>
    </profiles>

