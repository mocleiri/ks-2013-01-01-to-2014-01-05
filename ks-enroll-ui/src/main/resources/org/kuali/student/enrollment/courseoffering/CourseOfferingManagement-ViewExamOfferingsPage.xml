    <bean id="KSEO-ExamOfferings-View" parent="KS-Uif-FormView" p:applyDirtyCheck="false">

        <property name="id" value="examOfferingsView"/>
        <property name="entryPageId" value="examOfferingsViewPage"/>
        <property name="viewHelperServiceClass" value="org.kuali.student.enrollment.class2.courseoffering.service.impl.CourseOfferingManagementViewHelperServiceImpl"/>
        <property name="formClass" value="org.kuali.student.enrollment.class2.courseoffering.form.CourseOfferingManagementForm"/>
        <property name="headerText" value="@{#dp.inputCode}" />
        <property name="header.cssClasses">
            <list merge="true">
                <value>uif-viewHeader</value>
            </list>
        </property>

        <property name="viewSourceFile" value="CourseOfferingManagement-ViewExamOfferingsPage.xml" /> <!-- Shows up in HTML so devs can find the code -->

        <property name="authorizer">
            <bean class="org.kuali.student.enrollment.main.view.KsViewAuthorizerBase"/>
        </property>


        <property name="footer">
            <bean parent="Uif-FooterBase"/>
        </property>

        <property name="additionalScriptFiles">
            <list merge="true">
                <value>themes/ksboot/scripts/toolbar.js</value>
                <value>ks-krad/scripts/ks-krad-collection-rowSelection.js</value>
            </list>
        </property>
        <property name="additionalCssFiles">
            <list merge="true">
                <value>themes/ksboot/stylesheets/calendar.css</value>
                <value>themes/ksboot/stylesheets/krms.css</value>
            </list>
        </property>

        <property name="breadcrumbOptions.homewardPathBreadcrumbs">
            <list>
                <ref bean="KS-HomewardPathBreadcrumbs-Home"/>
                <ref bean="KS-HomewardPathBreadcrumbs-Enrollment"/>
                <bean parent="Uif-BreadcrumbItem">
                    <property name="label" value="Course Offerings"/>
                    <property name="url.viewId" value="courseOfferingManagementView"/>
                    <property name="url.controllerMapping" value="courseOfferingManagement"/>
                </bean>
                <bean parent="Uif-BreadcrumbItem">
                    <property name="label" value="@{#dp.subjectCode}"/>
                    <property name="url.viewId" value="courseOfferingManagementView"/>
                    <property name="url.controllerMapping" value="courseOfferingManagement"/>
                    <property name="url.requestParameters">
                        <map key-type="java.lang.String" merge="true">
                            <entry key="methodToCall" value="show"/>
                            <entry key="dataObjectClassName" value="org.kuali.student.r2.lum.course.dto.CourseInfo"/>
                            <entry key="hideReturnLink" value="true"/>
                            <entry key="inputCode" value="@{#dp.subjectCode}"/>
                            <entry key="formKey" value="@{returnFormKey}"/>
                            <entry key="pageId" value="manageCourseOfferingsPage"/>
                            <entry key="viewName" value="@{#dp.subjectCode}"/>
                        </map>
                    </property>
                </bean>
                <bean parent="Uif-BreadcrumbItem">
                    <property name="label" value="@{#dp.inputCode}"/>
                    <property name="url.viewId" value="courseOfferingManagementView"/>
                    <property name="url.controllerMapping" value="courseOfferingManagement"/>
                    <property name="url.requestParameters">
                        <map key-type="java.lang.String" merge="true">
                            <entry key="methodToCall" value="show"/>
                            <entry key="dataObjectClassName" value="org.kuali.student.r2.lum.course.dto.CourseInfo"/>
                            <entry key="hideReturnLink" value="true"/>
                            <entry key="inputCode" value="@{#dp.inputCode}"/>
                            <entry key="termCode" value="@{#dp.termCode}"/>
                            <entry key="pageId" value="manageTheCourseOfferingPage"/>
                        </map>
                    </property>
                </bean>
            </list>
        </property>
        <property name="breadcrumbOptions.breadcrumbOverrides">
            <list>
                <bean parent="Uif-BreadcrumbItem">
                    <property name="label" value="Exam Offerings"/>
                </bean>
            </list>
        </property>

        <property name="items">
            <list>
                <ref bean="KSEO-ExamOfferingsView-Page"/>
            </list>
        </property>
        <property name="dialogs">
            <list>

            </list>
        </property>
    </bean>

    <bean id="KSEO-ExamOfferingsView-Page" parent="KS-Uif-Page" p:disclosure.render="false"
          p:id="examOfferingsViewPage">
        <property name="headerText" value="Exam Offerings"/>
        <property name="items">
            <list>
                <bean parent="Uif-HorizontalBoxSection">
                      <!--p:progressiveRender="currentCourseOfferingWrapper.finalExamDriverUI eq 'Course Offering'">-->
                    <property name="items">
                        <list>
                            <ref bean="KSEO-RDLTable"/>
                            <ref bean="KSEO-RDLTable-AO" />
                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

    <bean id="KSEO-RDLTable" parent="Uif-TableCollectionSection" p:renderAddLine="false" p:renderLineActions="false"
          p:readOnly="true" p:width="75%"  p:progressiveRender="currentCourseOfferingWrapper.finalExamDriverUI eq 'Course Offering'">
        <property name="collectionObjectClass"
                  value="org.kuali.student.enrollment.class2.courseoffering.dto.ExamOfferingWrapper"/>
        <property name="propertyName" value="examOfferingWrapperList"/>
        <property name="headerText" value="Requested Exam Offering Delivery Logistics by Course Offering"/>
        <property name="collectionLookup">
            <bean parent="Uif-CollectionQuickFinder" p:quickfinderAction.render="false"/>
        </property>
        <property name="layoutManager.renderSequenceField" value="false"/>
        <property name="layoutManager.applyDefaultCellWidths" value="false"/>
        <property name="layoutManager.applyAlternatingRowStyles" value="false"/>
        <property name="layoutManager.richTable">
            <bean parent="KS-Uif-RichTable"/>
        </property>
        <property name="layoutManager.richTable.templateOptions">
            <map merge="true">
                <entry key="sDom" value="rtip"/>
                <entry key="bPaginate" value="false"/>
                <entry key="aaSorting" value="[[1,'asc'],[2,'asc']]"/>
                <entry key="bAutoWidth" value="false"/>
            </map>
        </property>
        <property name="items">
            <list>
                <bean parent="Uif-DataField" p:label="Status" p:propertyName="stateName"/>
                <bean parent="Uif-DataField" p:label="Days" p:propertyName="daysDisplayName"/>
                <bean parent="Uif-DataField" p:label="Start Time" p:propertyName="startTimeDisplay"/>
                <bean parent="Uif-DataField" p:label="End Time" p:propertyName="endTimeDisplay"/>
                <bean parent="Uif-DataField" p:label="Facility" p:propertyName="buildingName"/>
                <bean parent="Uif-DataField" p:label="Room" p:propertyName="roomName"/>
            </list>
        </property>
    </bean>

    <bean id="KSEO-RDLTable-AO" parent="Uif-TableCollectionSection" p:renderAddLine="false" p:renderLineActions="false"
          p:readOnly="true" p:width="75%" p:progressiveRender="currentCourseOfferingWrapper.finalExamDriverUI eq 'Activity Offering'">
        <property name="collectionObjectClass"
                  value="org.kuali.student.enrollment.class2.courseoffering.dto.ExamOfferingWrapper"/>
        <property name="propertyName" value="examOfferingWrapperList"/>
        <property name="headerText" value="Request Exam Offering Delivery Logistics by Activity Offering"/>
        <property name="collectionLookup">
            <bean parent="Uif-CollectionQuickFinder" p:quickfinderAction.render="false"/>
        </property>
        <property name="layoutManager.renderSequenceField" value="false"/>
        <property name="layoutManager.applyDefaultCellWidths" value="false"/>
        <property name="layoutManager.applyAlternatingRowStyles" value="false"/>
        <property name="layoutManager.richTable">
            <bean parent="KS-Uif-RichTable"/>
        </property>
        <property name="layoutManager.richTable.templateOptions">
            <map merge="true">
                <entry key="sDom" value="rtip"/>
                <entry key="bPaginate" value="false"/>
                <entry key="aaSorting" value="[[1,'asc']]"/>
                <entry key="bAutoWidth" value="false"/>
            </map>
        </property>
        <property name="items">
            <list>
                <bean parent="Uif-DataField" p:label="Status" p:propertyName="stateName"/>
                <bean parent="Uif-DataField" p:label="Activity Code" p:propertyName="activityCode"/>
                <bean parent="Uif-DataField" p:label="Activity Type" p:propertyName="typeName"/>
                <bean parent="Uif-DataField" p:label="Days" p:propertyName="daysDisplayName"/>
                <bean parent="Uif-DataField" p:label="Start Time" p:propertyName="startTimeDisplay"/>
                <bean parent="Uif-DataField" p:label="End Time" p:propertyName="endTimeDisplay"/>
                <bean parent="Uif-DataField" p:label="Facility" p:propertyName="buildingName"/>
                <bean parent="Uif-DataField" p:label="Room" p:propertyName="roomName"/>

            </list>
        </property>
    </bean>

</beans>