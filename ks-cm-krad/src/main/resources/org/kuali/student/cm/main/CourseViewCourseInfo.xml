<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="KS-CourseView-CourseInfoPage" parent="Uif-Page"
          p:headerText="Course Information"
          p:disclosure.render="false">
        <property name="header">
            <bean parent="Uif-HeaderTwo">
                <property name="cssClasses">
                    <list merge="true">
                        <value>ks-header</value>
                    </list>
                </property>
            </bean>
        </property>
        <property name="items">
            <list>
            	<ref bean="KS-CourseView-CourseInfoPage-Widgets" />
            </list>
        </property>
        <property name="footer">
            <bean parent="Uif-FooterBase">
                <property name="items">
                    <list>
                        <bean parent="Uif-ActionLink" p:actionLabel="Cancel" p:actionScript="stepBrowserBack()"/>
                    </list>
                </property>
            </bean>
        </property>
    </bean>
    
    <bean id="KS-CourseView-CourseInfoPage-Widgets" parent="Uif-VerticalBoxSection">
		<property name="items">
			<list>
				<bean parent="Uif-InputField-LabelTop" p:label="Proposal Title"
					p:propertyName="proposalInfo.name" p:required="true">
					<property name="instructionalText" value="This title is used for identifying the proposal through the appproval process. It is highly recommended that you use the same name for the course and proposal title."/>
					<property name="control">
						<bean parent="Uif-LargeTextControl" />
					</property>
					<property name="help">
						<bean parent="Uif-Help"
							p:tooltipHelpContent="Avoid naming your proposal &quot;my proposal&quot; or &quot;Sarah's Proposal&quot; so that it can be easily identified later." />
					</property>
				</bean>
				<bean parent="Uif-InputField-LabelTop" p:label="Course Title"
					p:propertyName="courseTitle" p:required="true">
					<property name="instructionalText" value="It is highly recommended that you use the same name for the course and proposal title."/>
					<property name="control">
						<bean parent="Uif-LargeTextControl" />
					</property>
				</bean>
				<bean parent="Uif-InputField-LabelTop" p:label="Transcript Course Title"
					p:propertyName="transcriptCourseTitle">
					<property name="instructionalText" value="This is the truncated title that will appear on the printed transcript."/>
					<property name="maxLength" value="24" />
					<property name="control">
						<bean parent="Uif-TextControl" p:size="24" />
					</property>
				</bean>
				<bean parent="Uif-HorizontalBoxSection">
					<property name="items">
						<list>
							<bean id="KS-SubjectArea-Field" parent="Uif-InputField-LabelTop" p:label="Subject Code"
								p:propertyName="subjectArea">
								<property name="constraintText" value="Must be a 4 letter code"/>
								<property name="maxLength" value="4" />
								<property name="validCharactersConstraint">
									<bean parent="AlphaPatternConstraint"/>
								</property>
								<property name="control">
									<bean parent="Uif-TextControl" p:size="4" p:watermarkText="AAAA"/>
								</property>
							</bean>
							<bean id="KS-CourseNumberSuffix-Field" parent="Uif-InputField-LabelTop" p:label="Course Number"
								p:propertyName="courseNumberSuffix">
								<property name="constraintText" value="Must be a 3 digit number" />
								<property name="maxLength" value="3" />
								<property name="validCharactersConstraint">
									<bean parent="NumericPatternConstraint"/>
								</property>
								<property name="control">
									<bean parent="Uif-TextControl" p:size="3" p:watermarkText="111"/>
								</property>
								<property name="help">
									<bean parent="Uif-Help"
										p:tooltipHelpContent="The department will determine the course number based on: course format, restrictions, available numbers, and other factors." />
								</property>
							</bean>
						</list>
					</property>
				</bean>
				<bean id="KS-CrossListingEtcDisclosure-Section" parent="Uif-Disclosure-VerticalBoxSubSection" p:disclosure.defaultOpen="false">
					<property name="headerText" value="Cross List, Offer Jointly, Add Version Codes" />
					<property name="items">
						<list>
							<bean id="KS-CrossListed-Section" parent="Uif-StackedCollectionSubSection" p:headerText="Cross Listed Courses" 
								p:propertyName="crossListings" p:collectionObjectClass="org.kuali.student.r2.lum.course.dto.CourseCrossListingInfo">
								<property name="layoutManager.summaryTitle" value="Cross Listed Course"/>
							    <property name="layoutManager.summaryFields">
									<list>
										<value>subjectArea</value>
										<value>courseNumberSuffix</value>
									</list>
								</property>
								<property name="renderAddBlankLineButton" value="true" />
								<property name="addLinePlacement" value="BOTTOM" />
								<property name="addBlankLineAction.actionLabel" value="Add Another Cross Listing" />
      							<property name="items">
									<list>
										<ref bean="KS-SubjectArea-Field" />
										<ref bean="KS-CourseNumberSuffix-Field" />
									</list>
								</property>
							</bean>
							<bean id="KS-JointlyOffered-Section" parent="Uif-StackedCollectionSubSection" p:headerText="Jointly Offered Courses" 
								p:propertyName="joints" p:collectionObjectClass="org.kuali.student.r2.lum.course.dto.CourseJointInfo">
								<property name="layoutManager.summaryTitle" value="Jointly Offered Course"/>
    							<property name="layoutManager.summaryFields" value="courseId" />
								<property name="renderAddBlankLineButton" value="true" />
								<property name="addLinePlacement" value="BOTTOM" />
								<property name="addBlankLineAction.actionLabel" value="Add Another Course" />
								<property name="items">
									<list>
										<bean parent="Uif-InputField-LabelTop" p:label="Course Number or Title"
											p:propertyName="courseId">
											<property name="instructionalText" value="Enter an existing course or proposal."/>
											<property name="control">
												<bean parent="Uif-TextControl" />
											</property>
											<property name="help">
												<bean parent="Uif-Help"
													p:tooltipHelpContent="Can't find the course? If a course is still in proposal (pre-approval) stage, you may not be able to find it without being designated as a collaborator on that proposal. If you can't find a proposal you know exists, contact the author and ask them to make you a collaborator." />
											</property>
										</bean>
									</list>
								</property>
							</bean>
							<bean id="KS-VersionCodes-Section" parent="Uif-StackedCollectionSubSection" p:headerText="Version Codes"
								p:propertyName="variations" p:collectionObjectClass="org.kuali.student.r2.lum.course.dto.CourseVariationInfo">
								<property name="layoutManager.summaryTitle" value="Version Code"/>
								<property name="layoutManager.summaryFields">
									<list>
										<value>variationCode</value>
										<value>variationTitle</value>
									</list>
								</property>
								<property name="renderAddBlankLineButton" value="true" />
								<property name="addLinePlacement" value="BOTTOM" />
								<property name="addBlankLineAction.actionLabel" value="Add a Version Code" />
								<property name="items">
									<list>
										<bean parent="Uif-InputField-LabelTop" p:label="Version Code"
											p:propertyName="variationCode">
											<property name="constraintText" value="Code must be a capital letter."/>
											<property name="control">
												<bean parent="Uif-TextControl" p:size="1" />
											</property>
											<property name="validCharactersConstraint">
												<bean parent="AlphaPatternConstraint"/>
											</property>
										</bean>
										<bean parent="Uif-InputField-LabelTop" p:label="Course Title"
											p:propertyName="variationTitle" p:required="true">
											<property name="control">
												<bean parent="Uif-LargeTextControl" />
											</property>
										</bean>
									</list>
								</property>
							</bean>
						</list>
					</property>
				</bean>
				<bean parent="Uif-TableCollectionSection" p:headerText="Instructor(s)"
					p:collectionObjectClass="org.kuali.student.r2.lum.clu.dto.CluInstructorInfo"
					p:propertyName="instructors">
					<property name="items">
						<list>
							<bean parent="Uif-InputField" p:propertyName="personId" />
						</list>
					</property>
				</bean>
				<bean parent="Uif-VerticalBoxSection" p:title="Description and Rationale"> 
					<property name="items">
						<list>
							<bean parent="Uif-InputField-LabelTop" p:label="Description"
								p:propertyName="descr.plain">
								<property name="instructionalText" value="This description will appear in the catalog."/>
								<property name="control">
									<bean parent="Uif-TextAreaControl"/>
								</property>
							</bean>
							<bean parent="Uif-InputField-LabelTop" p:label="Proposal Rationale"
								p:propertyName="proposalInfo.rationale.plain">
								<property name="instructionalText" value="This will be used in evaluating the proposal. It will not be published in the catalog."/>
								<property name="maxLength" value="255" />
								<property name="control">
									<bean parent="Uif-TextAreaControl"/>
								</property>
							</bean>
						</list>
					</property>
				</bean>
			</list>
		</property>
	</bean>
    
</beans>