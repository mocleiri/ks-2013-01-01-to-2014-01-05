<beans xmlns="http://www.springframework.org/schema/beans"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">
    
    <import resource="classpath:ks-CourseInfo-dictionary.xml"/>
    <import resource="classpath:ks-ProposalInfo-dictionary.xml"/>
    
    <!-- CourseInfo-->
    <bean id="CourseProposalInfo" parent="DataObjectEntry">
        <property name="name" value="courseProposalInfo"/>
        <property name="dataObjectClass" value="org.kuali.student.cm.course.dto.CourseProposalInfo"/>
        <property name="objectLabel" value="Course and Proposal Wrapper"/>
        <property name="objectDescription">
            <value>
This class wraps both the CourseInfo and ProposalInfo objects in order to maintain it using CM services.
            </value>
        </property>
        <property name="titleAttribute" value="course.courseTitle"/>
        <property name="primaryKeys">
            <list>
                <value>id</value>
            </list>
        </property>

        <property name="attributes">
            <list>
                <ref bean="CourseProposalInfo.audit"/>
                <ref bean="CourseProposalInfo.passFail"/>
                <ref bean="CourseProposal.finalExamStatus"/>
                <ref bean="CourseProposal.finalExamRationale"/>
                <ref bean="CourseProposal.showAll"/>
                <ref bean="CourseProposal.userId"/>
                <ref bean="CourseProposal.lastUpdated"/>
            </list>
        </property>

        <property name="complexAttributes">
            <list>
                <ref bean="CourseProposalInfo.course"/>
                <ref bean="CourseProposalInfo.proposal"/>
                
            </list>
        </property>

        <property name="collections">
            <list>
                <ref bean="CourseProposalInfo.instructorWrappers"/>
                <ref bean="CourseProposalInfo.courseJointWrappers"/>
                <ref bean="CourseProposalInfo.creditOptionWrappers"/>
            </list>
        </property>
    </bean>
    
    <!-- Attributes -->
    
    <bean id="CourseProposalInfo.audit" parent="BaseKuali.boolean">
        <property name="name" value="audit" />
        <property name="shortLabel" value="Audit" />
        <property name="summary">
            <value>
                Flag to indicate if this course can be audited.
                </value>
        </property>
        <property name="label" value="Audit" />
        <property name="description">
            <value>
                Flag to indicate if this course can be audited.
                </value>
        </property>
        <property name="required" value="false" />
    </bean>
    
    <bean id="CourseProposalInfo.passFail" parent="BaseKuali.boolean">
        <property name="name" value="passFail" />
        <property name="shortLabel" value="Pass Fail Transcript Grade" />
        <property name="summary">
            <value>
                Pass Fail Transcript Grade
                </value>
        </property>
        <property name="label" value="Pass Fail Transcript Grade" />
        <property name="description">
            <value>
                Pass Fail Transcript Grade
                </value>
        </property>
        <property name="required" value="false" />
    </bean>
    
    <bean id="CourseProposal.finalExamStatus" parent="BaseKuali.string">
        <property name="name" value="finalExamStatus" />
        <property name="shortLabel" value="Final Exam Status" />
        <property name="summary">
            <value>
                Final Exam Status
                </value>
        </property>
        <property name="label" value="Final Exam Status" />
        <property name="description">
            <value>
                Final Exam Status
                </value>
        </property>
        <property name="required" value="false" />
    </bean>
    
    <bean id="CourseProposal.finalExamRationale" parent="BaseKuali.string">
        <property name="name" value="finalExamRationale" />
        <property name="shortLabel" value="Final Exam Rationale" />
        <property name="summary">
            <value>
                Final Exam Rationale
                </value>
        </property>
        <property name="label" value="Final Exam Rationale" />
        <property name="description">
            <value>
                Final Exam Rationale
                </value>
        </property>
        <property name="required" value="false" />
    </bean>
    
    <bean id="CourseProposalInfo.showAll" parent="BaseKuali.boolean">
        <property name="name" value="showAll" />
        <property name="shortLabel" value="Show All" />
        <property name="summary">
            <value>
                Show All Required fields.
                </value>
        </property>
        <property name="label" value="Show All" />
        <property name="description">
            <value>
                Show All Required fields.
                </value>
        </property>
        <property name="required" value="false" />
    </bean>
    
    <bean id="CourseProposal.userId" parent="BaseKuali.string">
        <property name="name" value="userId" />
        <property name="shortLabel" value="User Id" />
        <property name="summary">
            <value>
                User id of the currently logged in user.
                </value>
        </property>
        <property name="label" value="User Id" />
        <property name="description">
            <value>
                User id of the currently logged in user.
                </value>
        </property>
        <property name="required" value="false" />
    </bean>
    
    <bean id="CourseProposal.lastUpdated" parent="BaseKuali.string">
        <property name="name" value="lastUpdated" />
        <property name="shortLabel" value="Last Updated" />
        <property name="summary">
            <value>
                Date and Time of last updated change to the course proposal.
                </value>
        </property>
        <property name="label" value="Last Updated" />
        <property name="description">
            <value>
                Date and Time of last updated change to the course proposal.
                </value>
        </property>
        <property name="required" value="false" />
    </bean>
    
    <!-- Complex Attributes -->
    
    <bean id="CourseProposalInfo.course" parent="ComplexAttributeDefinition">
        <property name="name" value="course" />
        <property name="shortLabel" value="Course" />
        <property name="summary">
            <value>
                Course reference object on CourseProposalInfo.
                </value>
        </property>
        <property name="label" value="Course" />
        <property name="description">
            <value>
                Course reference object on CourseProposalInfo.
                </value>
        </property>
        <property name="required" value="true" />
        <property name="dataObjectEntry">
            <ref bean="CourseInfo" />
        </property>
    </bean>
    
    <bean id="CourseProposalInfo.proposal" parent="ComplexAttributeDefinition">
        <property name="name" value="proposal"/>
        <property name="shortLabel" value="Proposal"/>
        <property name="summary">
            <value>
Proposal reference object on CourseProposalInfo. 
            </value>
        </property>
        <property name="label" value="Proposal"/>
        <property name="description">
            <value>
Proposal reference object on CourseProposalInfo. 
            </value>
        </property>
        <property name="required" value="true"/>
        <property name="dataObjectEntry">
            <ref bean="ProposalInfo" />
        </property>
      </bean>
      
      <!-- Collection Attributes -->
      
      <bean id="CourseProposalInfo.instructorWrappers" parent="CollectionDefinition">
        <property name="name" value="instructorWrappers"/>
        <property name="shortLabel" value="Instructor Wrappers"/>
        <property name="summary">
            <value>
                Instructor Wrappers
            </value>
        </property>
        <property name="label" value="Instructor Wrappers"/>
        <property name="elementLabel" value="Instructor Wrappers"/>
        <property name="description">
            <value>
                Instructor Wrappers
            </value>
        </property>
        <property name="minOccurs" value="0"/>
        <property name="dataObjectClass" value="org.kuali.student.cm.course.form.CluInstructorInfoWrapper"/>
    </bean>

</beans>