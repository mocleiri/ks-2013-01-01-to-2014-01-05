<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="KS-CourseView-CourseLogisticsPage" parent="Uif-Page"
		p:headerText="Course Logistics" p:disclosure.render="false">
		<property name="header">
			<bean parent="Uif-HeaderTwo">
				<property name="cssClasses">
					<list merge="true">
						<value>ks-header</value>
					</list>
				</property>
			</bean>
		</property>
		<property name="items">
			<list>
				<ref bean="KS-CourseView-CourseLogisticsPage-Scheduling-Widgets" />
				<ref bean="KS-CourseView-CourseLogisticsPage-DurationCount-Widgets" />
				<ref bean="KS-CourseView-CourseLogisticsPage-LearningResults-Widgets" />
				<ref bean="KS-CourseView-CourseLogisticsPage-GradesAssessments-Widgets" />
				<ref
					bean="KS-CourseView-CourseLogisticsPage-StudentRegistrationOptions-Widgets" />
				<ref bean="KS-CourseView-CourseLogisticsPage-FinalExam-Widgets" />
				<!-- <ref bean="KS-CourseView-CourseLogisticsPage-Outcome-Widgets" /> -->
				<!-- <ref bean="KS-CourseView-CourseLogisticsPage-CourseFormats-Widgets" 
					/> -->
			</list>
		</property>
		<property name="footer">
			<bean parent="Uif-FooterBase">
				<property name="items">
					<list>
						<bean parent="Uif-ActionLink" p:actionLabel="Cancel"
							p:actionScript="stepBrowserBack()" />
					</list>
				</property>
			</bean>
		</property>
	</bean>
	<bean id="KS-CourseView-CourseLogisticsPage-Scheduling-Widgets"
		parent="Uif-VerticalBoxSection" p:headerText="Scheduling">
		<property name="items">
			<list>
				<bean parent="Uif-InputField-LabelTop" p:propertyName="courseInfo.campusLocations"
					p:label="Term">
					<property name="instructionalText"
						value="Selecting a single term will restrict this course to only that term. Any will allow the course to be offered in any term that matches the duration selected below." />
					<property name="control">
						<bean parent="Uif-VerticalCheckboxesControl" />
					</property>
					<property name="optionsFinder">
						<bean
							class="org.kuali.student.lum.lu.ui.course.keyvalues.CampusLocationsKeyValuesFinder" />
					</property>
				</bean>
			</list>
		</property>
	</bean>
	<bean id="KS-CourseView-CourseLogisticsPage-DurationCount-Widgets"
		parent="Uif-HorizontalBoxSection" p:headerText="Duration Count"
		p:instructionalText="First select the duration type (term, month, week, weekend, day) then select the count of the duration for the course. Most courses will have 1 or 2 terms, for example.">
		<property name="items">
			<list>
				<bean parent="Uif-InputField-LabelTop" p:propertyName="courseInfo.subjectArea"
					p:label="Duration Type"
					p:optionsFinderClass="org.kuali.rice.student.lookup.keyvalues.AllOrgsValuesFinder">
					<property name="control">
						<bean parent="Uif-DropdownControl" />
					</property>
				</bean>
				<bean parent="Uif-InputField-LabelTop" p:label="Durantion Count"
					p:propertyName="courseInfo.transcriptTitle">
					<property name="maxLength" value="3" />
					<property name="control">
						<bean parent="Uif-TextControl" p:size="3" />
					</property>
				</bean>
			</list>
		</property>
	</bean>
	<bean id="KS-CourseView-CourseLogisticsPage-LearningResults-Widgets"
		parent="Uif-HorizontalBoxSection" p:headerText="Learning Results">
		<property name="instructionalText"
			value="There are two types of learning results, Grades/Assessments and Credits/Outcomes. You can add multiple options 
				for either type, which can be used for multiple course formats, or to account for variations in course offerings." />
	</bean>
	<bean id="KS-CourseView-CourseLogisticsPage-GradesAssessments-Widgets"
		parent="Uif-VerticalBoxSection" p:headerText="Grades/Assessments">
		<property name="items">
			<list>
				<bean parent="Uif-InputField-LabelTop" p:propertyName="courseInfo.campusLocations"
					p:label="Assessment Scale" p:required="true">
					<property name="control">
						<bean parent="Uif-VerticalCheckboxesControl" />
					</property>
					<property name="optionsFinder">
						<bean
							class="org.kuali.student.lum.lu.ui.course.keyvalues.CampusLocationsKeyValuesFinder" />
					</property>
					<property name="help">
						<bean parent="Uif-Help" p:tooltipHelpContent="Letter, Standard Values " />
					</property>
				</bean>
			</list>
		</property>
	</bean>
	<bean
		id="KS-CourseView-CourseLogisticsPage-StudentRegistrationOptions-Widgets"
		parent="Uif-VerticalBoxSection" p:headerText="Student Registration Options">
		<property name="items">
			<list>
				<bean parent="Uif-InputField-LabelTop" p:propertyName="courseInfo.pilotCourse"
					p:label="Audit" p:labelPlacement="LEFT">
					<property name="instructionalText" value="This course can be audited" />
					<property name="control">
						<bean parent="Uif-CheckboxControl" />
					</property>
				</bean>
				<bean parent="Uif-InputField-LabelTop" p:propertyName="courseInfo.pilotCourse"
					p:label="Pass Fail Transcript Grade" p:labelPlacement="LEFT">
					<property name="instructionalText"
						value="This course will have a student selectable pass/fail option" />
					<property name="control">
						<bean parent="Uif-CheckboxControl" />
					</property>
				</bean>
			</list>
		</property>
	</bean>

	<bean id="KS-CourseView-CourseLogisticsPage-FinalExam-Widgets"
		parent="Uif-VerticalBoxSection" p:headerText="Final Exam">
		<property name="items">
			<list>
				<bean parent="Uif-InputField-LabelTop" p:propertyName="courseInfo.pilotCourse"
					p:label="Final Exam Status" p:width="auto" p:required="true">
					<property name="control">
						<bean parent="Uif-VerticalRadioControl" />
					</property>
					<property name="optionsFinder">
						<bean
							class="org.kuali.student.lum.lu.ui.course.keyvalues.CampusLocationsKeyValuesFinder" />
					</property>
				</bean>
			</list>
		</property>
	</bean>
</beans>