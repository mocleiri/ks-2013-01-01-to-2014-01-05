<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- Controller Class: CourseController.java View Helper Class: CourseViewHelperServiceImpl.java 
        UX : http://ux.ks.kuali.org.s3.amazonaws.com/wireframes/ENR/Scheduling_Interface/v3/start.html 
        This view has couple of pages (edit and copy) with all the beans defined 
        at 1. CourseViewCourseInfoPage.xml -->

    <bean id="KS-CourseView" parent="KSFormView">
        <property name="id" value="courseView" />
        <property name="viewName" value="courseView" />
        <property name="headerText" value="Course View" />
        <property name="header.render" value="false" />
        <property name="header" ref="KS-CourseView-Header" />
        <property name="entryPageId" value="KS-CourseView-CourseInfoPage" />
        <property name="navigation">
            <ref bean="KS-CourseNavigation-Menu" />
        </property>
        <property name="formClass" value="org.kuali.student.cm.course.form.CourseForm" />
        <property name="viewHelperServiceClass"
            value="org.kuali.student.cm.course.service.impl.CourseViewHelperServiceImpl" />

        <property name="items">
            <list>
                <ref bean="KS-CourseView-CourseInfoPage" />
                <ref bean="KS-CourseView-GovernancePage" />
                <ref bean="KS-CourseView-CourseLogisticsPage" />
                <ref bean="KS-CourseView-LearningObjectivesPage" />
                <ref bean="KS-CourseView-CourseRequisitesPage" />
                <ref bean="KS-CourseView-ActiveDatesPage" />
                <ref bean="KS-CourseView-FinancialsPage" />
                <ref bean="KS-CourseView-AuthorsAndCollaboratorsPage" />
                <ref bean="KS-CourseView-SupportingDocumentsPage" />
                <ref bean="KS-CourseView-ReviewProposalPage" />
            </list>
        </property>
        <property name="dialogs">
            <list>
                <ref bean="commentsLightBox" />
                <ref bean="decisionsDialog" />
                <ref bean="loCategoryDialog" />
            </list>
        </property>
        <!-- CSS Styling -->
        <property name="additionalCssFiles">
            <list merge="true">
                <value>ks-cm-krad/css/cm.css</value>
            </list>
        </property>
        <!-- Custom JavaScript -->
        <property name="additionalScriptFiles">
            <list merge="true">
                <value>ks-cm-krad/scripts/jquery.jqEasyCharCounter.custom.js</value>
                <value>ks-cm-krad/scripts/common.js</value>
            </list>
        </property>
    </bean>

    <bean id="commentsLightBox" parent="Uif-VerticalBoxGroup"
        p:instructionalText="All comments posted here will be visible to authors, and to reviewers after you submit the proposal">
        <property name="headerText" value="Proposal Comments" />
        <property name="items">
            <list>
                <bean parent="Uif-StackedCollectionSection"
                    p:collectionObjectClass="org.kuali.student.r2.core.comment.dto.CommentInfo"
                    p:propertyName="commentInfos">
                    <property name="addLinePlacement" value="BOTTOM" />
                    <property name="addLineLabel">
                        <bean parent="Uif-Label">
                            <property name="labelText" value=" Leave a Comment " />
                        </bean>
                    </property>
                    <property name="items">
                        <list>
                            <bean parent="Uif-InputField-LabelTop" p:propertyName="commentText.plain" />
                        </list>
                    </property>
                </bean>
                <bean parent="Uif-PrimaryActionButton" p:actionLabel="Submit"
                    p:methodToCall="createComment" />
            </list>
        </property>
    </bean>

    <bean id="loCategoryDialog" parent="Uif-DialogGroup" p:headerText="Select Categories">
        <property name="availableResponses">
            <list>
                <bean parent="Uif-KeyLabelPair" p:key="Y" p:value="Add" />
                <bean parent="Uif-KeyLabelPair" p:key="N" p:value="Cancel" />
            </list>
        </property>
        <property name="items">
            <list>
                <bean parent="Uif-VerticalBoxSection" p:headerText="Filter">
                    <property name="header.lowerGroup">
                        <bean parent="Uif-LinkGroup" p:linkSeparator="|">
                            <property name="items">
                                <list>
                                    <bean parent="Uif-ActionLink" p:actionLabel="Select All" />
                                    <bean parent="Uif-ActionLink" p:actionLabel="Clear" />
                                </list>
                            </property>
                        </bean>
                    </property>
                    <property name="items">
                        <list>
                            <bean parent="Uif-InputField" p:propertyName="loDialogWrapper.typeKey"
                                p:showLabel="false">
                                <property name="control">
                                    <bean parent="Uif-VerticalCheckboxesControl" />
                                </property>
                                <property name="optionsFinder">
                                    <bean
                                        class="org.kuali.student.lum.lu.ui.course.keyvalues.LoCategoryInfoTypeKeyValueFinder"
                                        p:addBlankOption="false" />
                                </property>
                            </bean>

                            <bean parent="Uif-InputField-LabelTop" p:propertyName="loDialogWrapper.categoryName"
                                p:label="By words in category">
                                <property name="control">
                                    <bean parent="Uif-TextControl" />
                                </property>
                            </bean>

                            <bean parent="Uif-LookupResultsCollectionSection"
                                p:propertyName="loDialogWrapper.learningObjectiveOptions">
                                <property name="collectionObjectClass"
                                    value="org.kuali.student.r2.lum.course.dto.LoDisplayInfo" />
                                <property name="includeLineSelectionField" value="true" />
                                <property name="items">
                                    <list>
                                        <bean parent="Uif-DataField" p:propertyName="name" />
                                        <bean parent="Uif-DataField" p:propertyName="typeName" />
                                    </list>
                                </property>
                                <property name="footer">
                                    <bean parent="Uif-FooterBase" />
                                    <!-- p:render="@{(loDialogWrapper.learningObjectiveOptions != null) 
                                        and !loDialogWrapper.learningObjectiveOptions.empty}"/> -->
                                </property>
                            </bean>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

    <!-- <bean id="Uif-MainteanceDialogResponse" parent="Uif-DialogResponse"> -->
    <!-- <property name="bindingInfo.bindToForm" value="true" /> -->
    <!-- </bean> -->

    <!-- <bean id="Uif-MainteanceDialogExplanation" parent="Uif-DialogExplanation"> -->
    <!-- <property name="bindingInfo.bindToForm" value="true" /> -->
    <!-- </bean> -->

    <bean id="KS-CourseView-Footer" parent="Uif-FooterBase">
        <property name="items">
            <list>
                <bean parent="Uif-PrimaryActionButton" p:methodToCall="saveAndContinue"
                    p:actionLabel="Save and Continue" p:performClientSideValidation="true"
                    p:loadingMessageText="Saving..." />
                <bean parent="Uif-PrimaryActionButton" p:actionLabel="Cancel"
                    p:methodToCall="cancel" />
            </list>
        </property>
    </bean>

    <bean id="KS-CourseNavigation-Menu" parent="Uif-MenuNavigationGroup">
        <property name="items">
            <list>
                <bean parent="Uif-HeaderTwo" p:headerText="Course Sections" />
                <bean id="KS-CourseViewCourseInfo-ActionLink" parent="Uif-NavigationActionLink"
                    p:navigateToPageId="KS-CourseView-CourseInfoPage" p:actionLabel="Course Information">
                </bean>
                <bean id="KS-CourseViewGovernance-ActionLink" parent="Uif-NavigationActionLink"
                    p:navigateToPageId="KS-CourseView-GovernancePage" p:actionLabel="Governance">
                </bean>
                <bean id="KS-CourseViewCourseLogistics-ActionLink" parent="Uif-NavigationActionLink"
                    p:navigateToPageId="KS-CourseView-CourseLogisticsPage"
                    p:actionLabel="Course Logistics" />
                <bean id="KS-CourseViewLearningObjectives-ActionLink" parent="Uif-NavigationActionLink"
                    p:navigateToPageId="KS-CourseView-LearningObjectivesPage"
                    p:actionLabel="Learning Objectives" />
                <bean id="KS-CourseViewCourseRequisites-ActionLink" parent="Uif-NavigationActionLink"
                    p:navigateToPageId="KS-CourseView-CourseRequisitesPage"
                    p:actionLabel="Course Requisites" />
                <bean id="KS-CourseViewActiveDates-ActionLink" parent="Uif-NavigationActionLink"
                    p:navigateToPageId="KS-CourseView-ActiveDatesPage" p:actionLabel="Active Dates" />
                <bean id="KS-CourseViewFinancials-ActionLink" parent="Uif-NavigationActionLink"
                    p:navigateToPageId="KS-CourseView-FinancialsPage" p:actionLabel="Financials" />
                <bean id="KS-CourseViewAuthorsAndCollaborators-ActionLink"
                    parent="Uif-NavigationActionLink" p:navigateToPageId="KS-CourseView-AuthorsAndCollaboratorsPage"
                    p:actionLabel="Authors &amp; Collaborators" />
                <bean id="KS-CourseViewSupportingDocuments-ActionLink" parent="Uif-NavigationActionLink"
                    p:navigateToPageId="KS-CourseView-SupportingDocumentsPage"
                    p:actionLabel="Supporting Documents" />
                <bean id="KS-CourseViewReviewProposal-ActionLink" parent="Uif-NavigationActionLink"
                    p:navigateToPageId="KS-CourseView-ReviewProposalPage"
                    p:actionLabel="Review Proposal" />
            </list>
        </property>
    </bean>

    <bean id="KS-CourseView-Header" parent="Uif-HeaderTwo">
        <property name="headerText" value="New Proposal" />
        <property name="cssClasses">
            <list merge="true">
                <value>ks-header</value>
            </list>
        </property>
        <property name="upperGroup">
            <bean parent="Uif-VerticalBoxGroup">
                <property name="items">
                    <list>
                        <bean parent="Uif-VerticalBoxGroup">
                            <property name="cssClasses">
                                <list merge="true">
                                    <value>ks-cm-page-header</value>
                                </list>
                            </property>
                            <property name="items">
                                <list>
                                    <bean parent="Uif-HeaderTwo">
                                        <property name="headerText" value="New Proposal" />
                                        <property name="cssClasses">
                                            <list merge="true">
                                                <value>ks-header</value>
                                            </list>
                                        </property>
                                    </bean>
                                    <bean parent="Uif-LinkGroup" p:linkSeparator="|">
                                        <property name="items">
                                            <list>
                                                <bean parent="Uif-DataField" p:label="Proposal Status"
                                                    p:shortLabel="Status" p:labelPlacement="LEFT"
                                                    p:propertyName="courseInfo.stateKey" />
                                                <bean parent="Uif-ActionLink" p:actionLabel="Comments"
                                                    p:actionScript="showLightboxComponent('commentsLightBox');" />
                                                <bean parent="Uif-ActionLink" p:actionLabel="Decisions"
                                                    p:actionScript="showLightboxComponent('decisionsDialog');" />
                                                <bean parent="Uif-Space" />
                                            </list>
                                        </property>
                                    </bean>
                                </list>
                            </property>
                        </bean>
                        <bean parent="Uif-VerticalBoxGroup">
                            <property name="items">
                                <list>
                                    <bean parent="Uif-Message">
                                        <property name="cssClasses">
                                            <list merge="true">
                                                <value>uif-pageValidationMessages-warning</value>
                                            </list>
                                        </property>
                                        <property name="messageText"
                                            value="Showing required and optional fields. Show only required fields" />
                                    </bean>
                                </list>
                            </property>
                        </bean>
                    </list>
                </property>
            </bean>
        </property>
    </bean>

    <bean id="decisionsDialog" parent="Uif-DialogGroup">
        <property name="headerText" value="Decisions" />
        <property name="promptText" value="" />
        <property name="items">
            <list>
                <bean parent="Uif-Disclosure-TableCollectionSection" p:layoutManager.numberOfColumns="4"> 
                  <property name="headerText" value="Decisions" /> 
                  <property name="collectionObjectClass" value="org.kuali.student.r2.core.comment.dto.DecisionInfo" /> 
                  <property name="propertyName" value="decisions" /> 
                  <property name="layoutManager.generateAutoSequence" value="true" /> 
                  <property name="layoutManager.richTable.render" value="false" /> 
                  <property name="renderAddLine" value="false" /> 
                  <property name="renderLineActions" value="false" />
                  <property name="items">
                    <list>
                      <bean parent="Uif-InputField" p:label="Decision" p:propertyName="decision"/>
                      <bean parent="Uif-InputField" p:label="Date" p:propertyName="date"/>
                      <bean parent="Uif-InputField" p:label="Actor" p:propertyName="actor"/>
                      <bean parent="Uif-InputField" p:label="Rationale" p:propertyName="rationale"/>
                    </list>
                  </property>
                </bean>
            </list>
        </property>
        <property name="responseInputField">
            <bean parent="Uif-DialogResponse">
                <property name="control">
                    <bean parent="Uif-HorizontalCheckboxesControl">
                        <property name="options">
                            <list>
                                <bean parent="Uif-KeyLabelPair" p:key="Y" p:value="OK"/>
                            </list>
                        </property>
                        <property name="cssClasses">
                            <list merge="true">
                                <value>uif-dialogButtons</value>
                            </list>
                        </property>
                    </bean>
                </property>
                <property name="onChangeScript" value="lightboxButtonScript();"/>
            </bean>
        </property>
    </bean>

</beans>
