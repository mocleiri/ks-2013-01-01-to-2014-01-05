<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="KS-CourseView-ReviewProposalPage" parent="Uif-MaintenancePage"
		  p:headerText="Review Proposal" p:disclosure.render="false">
        <property name="header" ref="KS-CourseView-Header" />

        <property name="items">
            <list>
                <ref bean="KS-CourseView-CourseInfoPage-ReviewWidgets" />
                <ref bean="KS-CourseView-GovernancePage-ReviewWidgets" />
                <ref bean="KS-CourseView-CourseLogisticsPage-ReviewWidgets" />
                <ref bean="KS-CourseView-ActiveDatesPage-ReviewWidgets" />
                <ref bean="KS-CourseView-LearningObjectives-ReviewWidgets" />
                <ref bean="KS-CourseView-AuthorsAndCollaboratorsPage-ReviewWidgets" />
                <ref bean="KS-CourseView-SupportingDocumentsPage-ReviewWidgets" />
            </list>
        </property>

        <property name="footer">
            <bean parent="KS-CourseView-Footer"/>
        </property>	
    </bean>


    <bean name="KS-CourseView-CourseInfoPage-ReviewWidgets" parent="Uif-Disclosure-VerticalBoxSection">
        <property name="items">
            <list>
                <bean parent="KS-CourseView-SectionHeader">
                    <property name="headerText" value="Course Information" />
                </bean>
            </list>                        
        </property>
    </bean>

    <bean name="KS-CourseView-GovernancePage-ReviewWidgets" parent="Uif-Disclosure-VerticalBoxSection">
        <property name="items">
            <list>
                <bean parent="KS-CourseView-SectionHeader">
                    <property name="headerText" value="Governance" />
                </bean>
            </list>
        </property>
    </bean>

    <bean name="KS-CourseView-CourseLogisticsPage-ReviewWidgets" parent="Uif-Disclosure-VerticalBoxSection">
        <property name="items">
            <list>
                <bean parent="KS-CourseView-SectionHeader">
                    <property name="headerText" value="Course Logistics" />
                </bean>
            </list>
        </property>
    </bean>

    <bean name="KS-CourseView-LearningObjectivesPage-ReviewWidgets" parent="Uif-Disclosure-VerticalBoxSection">
        <property name="items">
            <list>
                <bean parent="KS-CourseView-SectionHeader">
                    <property name="headerText" value="Learning Objectives" />
                </bean>
            </list>
        </property>
    </bean>

    <bean name="KS-CourseView-ActiveDatesPage-ReviewWidgets" parent="Uif-Disclosure-VerticalBoxSection">
        <property name="items">
            <list>
                <bean parent="KS-CourseView-SectionHeader">
                    <property name="headerText" value="Active Dates" />
                </bean>
            </list>
        </property>
    </bean>

    <bean name="KS-CourseView-AuthorsAndCollaboratorsPage-ReviewWidgets"  parent="Uif-Disclosure-VerticalBoxSection">
        <property name="items">
            <list>
                <bean parent="KS-CourseView-SectionHeader">
                    <property name="headerText" value="Authors and Collaborators"/>
                </bean>

            </list>
        </property>
    </bean>

    <bean name="KS-CourseView-SupportingDocumentsPage-ReviewWidgets" parent="Uif-Disclosure-VerticalBoxSection">
        <property name="items">
            <list>
                <bean parent="KS-CourseView-SectionHeader">
                    <property name="headerText" value="Supporting Documents" />
                </bean>

            </list>
        </property>
    </bean>

</beans>
