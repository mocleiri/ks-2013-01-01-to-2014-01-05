<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<bean id="CourseInfo-parent" abstract="true" parent="DataObjectEntry">
		<property name="name" value="courseInfo" />
		<property name="dataObjectClass"
			value="org.kuali.student.r2.lum.course.dto.CourseInfo" />
		<property name="objectLabel" value="Course Information" />
		<property name="objectDescription">
			<value>null</value>
		</property>
		<property name="titleAttribute" value="courseInfoTitle" />
		<property name="primaryKeys">
			<list>
				<value>id</value>
			</list>
		</property>

		<property name="attributes">
			<list>
				<ref bean="CourseInfo.id" />
				<!-- add Proposal Title -->
				<ref bean="CourseInfo.courseTitle" />
				<ref bean="CourseInfo.transcriptTitle" />
				<!-- add Subject Area -->
				<!-- add Course Number Suffix -->
				<!-- add Instructors -->
				<!-- add Description -->
				<!-- add Proposal Rationale -->

			</list>
		</property>

		<!-- <property name="complexAttributes">
			<list>
				<ref bean="CourseInfo.descr" />
				<ref bean="CourseInfo.gradingOption" />
				<ref bean="CourseInfo.creditOption" />
				<ref bean="CourseInfo.meta" />
			</list>
		</property>
		<property name="collections">
			<list>
				<ref bean="CourseInfo.studentRegistrationGradingOptions" />
			</list>
		</property>-->
	</bean>

	<bean id="CourseInfo.courseTitle-parent" abstract="true"
		parent="BaseKuali.string">
		<property name="name" value="courseTitle" />
		<property name="shortLabel" value="Course Title" />
		<property name="summary">
			<value>The Course Title Summary</value>
		</property>
		<property name="label" value="Course Title" />
		<property name="description">
			<value>The Course Title</value>
		</property>
		<property name="required" value="false" />
	</bean>
	<bean id="CourseInfo.courseTitle" parent="CourseInfo.courseTitle-parent" />

	<bean id="CourseInfo.transcriptTitle-parent" abstract="true"
		parent="BaseKuali.string">
		<property name="name" value="transcriptTitle" />
		<property name="shortLabel" value="Transcript Title" />
		<property name="summary">
			<value>The Course Transcript Title Summary</value>
		</property>
		<property name="label" value="Course Title" />
		<property name="description">
			<value>The Course Transcript Title</value>
		</property>
		<property name="required" value="false" />
	</bean>
	<bean id="CourseInfo.transcriptTitle" parent="CourseInfo.transcriptTitle-parent" />

</beans>