<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="KS-CourseView-GovernancePage" parent="Uif-Page"
		p:headerText="Governance" p:disclosure.render="false">
		<property name="header">
			<bean parent="Uif-HeaderTwo">
				<property name="cssClasses">
					<list merge="true">
						<value>ks-header</value>
					</list>
				</property>
			</bean>
		</property>
 		<property name="items">
 			<list> 
 				<ref bean="KS-CourseView-GovernancePage-Widgets" /> 
 			</list> 
 		</property> 
		<property name="footer">
			<bean parent="Uif-FooterBase">
				<property name="items">
					<list>
						<bean parent="Uif-ActionLink" p:actionLabel="Cancel"
							p:actionScript="stepBrowserBack()" />
					</list>
				</property>
			</bean>
		</property>
	</bean>

    <bean id="KS-CourseView-GovernancePage-Widgets" parent="Uif-VerticalBoxSection">
      <property name="items">
        <list>
          <bean parent="Uif-InputField-LabelTop" p:propertyName="courseInfo.campusLocations" p:label="Campus Locations"
                p:instructionalText="" p:width="auto">
            <property name="control">
              <bean parent="Uif-VerticalCheckboxesControl" />
            </property>
            <property name="optionsFinder">
              <bean class="org.kuali.student.lum.lu.ui.course.keyvalues.CampusLocationsKeyValuesFinder"/>
            </property>
          </bean>
          <bean parent="Uif-InputField-LabelTop" p:propertyName="courseInfo.subjectArea" p:label="Curriculum Oversight"
                p:instructionalText="This is the organization(s) responsible for the content of the course. This selection will determine the workflow/approval process for this proposal."
                p:optionsFinderClass="org.kuali.rice.student.lookup.keyvalues.AllOrgsValuesFinder">
            <property name="control">
              <bean parent="Uif-DropdownControl" />
            </property>
          </bean>
        </list>
      </property>
	</bean>
</beans>