<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-2.5.xsd">

    <context:annotation-config />

    <bean id="debugMode" class="java.lang.Boolean">
        <constructor-arg value="false" />
    </bean>
    
    <bean id="courseRegistrationService" class="org.kuali.student.r2.core.process.service.decorators.CourseRegistrationServiceProcessCheckDecorator" >
        <property name="nextDecorator" ref="courseRegistrationServiceMapImpl"/>
        <property name="processEvaluator" ref="krmsProcessEvaluator"/>
    </bean>
    <bean id="courseRegistrationServiceMapImpl" class="org.kuali.student.enrollment.class2.courseregistration.service.impl.CourseRegistrationServiceMapImpl" >
        <property name="merger" ref="mergerImpl"/>
    </bean>
    <bean id="krmsProcessEvaluator" class="org.kuali.student.r2.core.process.evaluator.KRMSProcessEvaluator" >
        <property name="atpService" ref="atpService"/>
        <property name="processService" ref="processServiceMapImpl"/>
        <property name="populationService" ref="populationService"/>
        <property name="exemptionService" ref="exemptionService"/>
        <property name="propositionFactory" ref="propositionFactoryHardwiredImpl"/>
        <property name="termResolvers">
            <list>
                <ref bean="registrationHoldsTermResolver"/>
                <ref bean="milestoneByTypeResolver"/>
                <ref bean="studentDeceasedTermResolver"/>
                <ref bean="summerOnlyStudentTermResolver"/>
                <ref bean="currentDateResolver"/>
            </list>
        </property>
    </bean>

    <bean id="registrationHoldsTermResolver" class="org.kuali.student.r2.core.process.krms.termresolver.RegistrationHoldsTermResolver">
        <property name="holdService" ref="holdService"/>
    </bean>
    
    <bean id="milestoneByTypeResolver" class="org.kuali.student.r2.core.process.krms.termresolver.MilestoneByTypeResolver">
        <property name="atpService" ref="atpService"/>
    </bean>
    
    <bean id="studentDeceasedTermResolver" class="org.kuali.student.r2.core.process.krms.termresolver.StudentDeceasedTermResolver">
        <property name="identityService" ref="identityService"/>
    </bean>

    <bean id="identityService" class="org.kuali.student.r2.core.process.ProcessPocIdentityServiceDecorator">
        <constructor-arg ref="identityServiceMapImpl"/>
    </bean>
    
    <bean id="summerOnlyStudentTermResolver" class="org.kuali.student.r2.core.process.krms.termresolver.SummerOnlyStudentTermResolver">
        <constructor-arg value="kuali.population.summer.only.student"/>
        <property name="populationService" ref="populationService"/>
    </bean>
    
    <bean id="currentDateResolver" class="org.kuali.student.r2.core.process.krms.termresolver.CurrentDateResolver"/>
    
    <bean id="identityServiceMapImpl" class="org.kuali.student.kim.permission.mock.IdentityServiceMapImpl"/>


    <bean id="propositionFactoryHardwiredImpl" class="org.kuali.student.r2.core.process.krms.evaluator.PropositionFactoryHardwiredImpl" >  
    </bean>
    
    <bean id="mergerImpl" class="org.kuali.student.poc.rules.credit.limit.RegistrationRequestMergerImpl" >   
        <property name="courseOfferingService" ref="courseOfferingServiceMapImpl"/>          
        <property name="courseRegistrationService" ref="courseRegistrationService"/>        
    </bean>
    
    <bean id="courseOfferingServiceMapImpl" class="org.kuali.student.enrollment.class2.courseoffering.service.impl.CourseOfferingServiceMapImpl" />
    
    <bean id="atpServiceMapImpl" class="org.kuali.student.r2.core.class1.atp.service.impl.AtpServiceMapImpl" />
    <bean id="atpService" class="org.kuali.student.r2.core.process.ProcessPocAtpServiceDecorator" init-method="init" >
        <property name="nextDecorator" ref="atpServiceMapImpl"/>
    </bean>
    
    
    <bean id="processServiceMapImpl" class="org.kuali.student.r2.core.process.service.impl.ProcessServiceMapImpl" />
    <bean id="processService" class="org.kuali.student.r2.core.process.ProcessPocProcessServiceDecorator"  init-method="init" >
        <property name="nextDecorator" ref="processServiceMapImpl"/>
    </bean>
    
    <bean id="populationService" class="org.kuali.student.r2.core.process.ProcessPocPopulationServiceMockImpl" />
    
    <bean id="exemptionServiceMapImpl" class="org.kuali.student.r2.core.exemption.service.impl.ExemptionServiceMapImpl" />
    <bean id="exemptionService" class="org.kuali.student.r2.core.process.ProcessPocExemptionServiceDecorator"  init-method="init" >
        <property name="nextDecorator" ref="exemptionServiceMapImpl"/>
    </bean>
    
    <bean id="holdService" class="org.kuali.student.r2.core.process.ProcessPocHoldServiceDecorator">
        <constructor-arg ref="holdServiceMapImpl"/>
    </bean>
    <bean id="holdServiceMapImpl" class="org.kuali.student.r2.core.class1.hold.mock.HoldServiceMapImpl"/>
</beans>
