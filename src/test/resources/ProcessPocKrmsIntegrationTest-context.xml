<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-2.5.xsd">

    <context:annotation-config />

    <bean id="debugMode" class="java.lang.Boolean">
        <constructor-arg value="false" />
    </bean>
    
    <bean id="courseRegistrationService" class="org.kuali.student.r2.core.process.service.decorators.CourseRegistrationServiceProcessCheckDecorator" >
        <property name="nextDecorator" ref="courseRegistrationServiceMapImpl"/>
        <property name="processEvaluator" ref="krmsProcessEvaluator"/>
    </bean>
    <bean id="courseRegistrationServiceMapImpl" class="org.kuali.student.enrollment.class2.courseregistration.service.impl.CourseRegistrationServiceMapImpl" >
        <property name="merger" ref="mergerImpl"/>
    </bean>
    <bean id="krmsProcessEvaluator" class="org.kuali.student.r2.core.process.krms.KRMSProcessEvaluator" >
        <property name="atpService" ref="atpService"/>
        <property name="processService" ref="processServiceMapImpl"/>
        <property name="populationService" ref="populdationServiceMockImpl"/>
        <property name="exemptionService" ref="exemptionService"/>
    </bean>

    <bean id="mergerImpl" class="org.kuali.student.poc.rules.credit.limit.RegistrationRequestMergerImpl" >   
        <property name="courseOfferingService" ref="courseOfferingServiceMapImpl"/>          
        <property name="courseRegistrationService" ref="courseRegistrationService"/>        
    </bean>
    
    <bean id="courseOfferingServiceMapImpl" class="org.kuali.student.enrollment.class2.courseoffering.service.impl.CourseOfferingServiceMapImpl" />
    
    <bean id="atpServiceMapImpl" class="org.kuali.student.r2.core.class1.atp.service.impl.AtpServiceMapImpl" />
    <bean id="atpService" class="org.kuali.student.r2.core.process.ProcessPocAtpServiceDecorator" init-method="init" >
        <property name="nextDecorator" ref="atpServiceMapImpl"/>
    </bean>
    
    
    <bean id="processServiceMapImpl" class="org.kuali.student.r2.core.process.service.impl.ProcessServiceMapImpl" />
    <bean id="processService" class="org.kuali.student.r2.core.process.ProcessPocProcessServiceDecorator" >
        <property name="nextDecorator" ref="processServiceMapImpl"/>
    </bean>
    
    <bean id="populdationServiceMockImpl" class="org.kuali.student.r2.core.process.ProcessPocPopulationServiceMockImpl" />
    
    <bean id="exemptionServiceMapImpl" class="org.kuali.student.r2.core.exemption.service.impl.ExemptionServiceMapImpl" />
    <bean id="exemptionService" class="org.kuali.student.r2.core.process.ProcessPocExemptionServiceDecorator" >
        <property name="nextDecorator" ref="exemptionServiceMapImpl"/>
    </bean>
    
</beans>
